{
  "variables": {
    "UPCLOUD_USERNAME": "{{ env `UPCLOUD_API_USER` }}",
    "UPCLOUD_PASSWORD": "{{ env `UPCLOUD_API_PASSWORD` }}",
    "PUBLIC_SSH_KEY": "{{ env `PUBLIC_SSH_KEY` }}"
  },
  "builders": [
    {
      "type": "upcloud",
      "username": "{{ user `UPCLOUD_USERNAME` }}",
      "password": "{{ user `UPCLOUD_PASSWORD` }}",
      "zone": "de-fra1",
      "storage_uuid": "01000000-0000-4000-8000-000050010400",
      "storage_size": 10,
      "template_prefix": "centos-8-vault"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [                                
        "PUBLIC_SSH_KEY={{ user `PUBLIC_SSH_KEY` }}"
      ],
      "scripts": [
	 "base/base-setup",
	 "vault/vault-install"
      ]
    }
  ]
}
